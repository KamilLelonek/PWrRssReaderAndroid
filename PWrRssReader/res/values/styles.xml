<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Pwrrssreadertheme" />

    <style name="MenuHeaderChannel" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/blue_light</item>
    </style>

    <style name="ButtonMenuList">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/menu_list_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ButtonMenuSliding" parent="ButtonMenuList">
        <item name="android:background">@drawable/menu_sliding_button</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="textStyleBlueHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>